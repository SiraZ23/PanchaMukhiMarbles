@model IEnumerable<PanchaMukhiMarbles.UI.Models.DTO.ProductDto>

@{
}
<h1 class="mt-3">Products</h1>
<div class="d-flex justify-content-end">
    <a class="btn btn-secondary" asp-asp-controller="Products" asp-action="Add">Add Products</a>
</div>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>ProductName</th>
            <th>Price</th>  
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.ProductName</td>
                <td>@product.Price</td>     
                <td>
                    <a asp-controller="Products" asp-route-id="@product.Id" asp-action="Edit" class="btn btn-light">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
